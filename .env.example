# TMDB API Configuration
VITE_TMDB_API_KEY=your_tmdb_api_key_here

# Appwrite Configuration
VITE_APPWRITE_PROJECT_ID=your_appwrite_project_id
VITE_APPWRITE_DB_ID=your_appwrite_database_id
VITE_APPWRITE_DB_COLLECTION_ID=your_appwrite_collection_id

# Runtime environment (development | staging | production)
VITE_APP_ENV=development
# Appwrite public endpoint
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
# TMDB base API URL
VITE_TMDB_BASE_URL=https://api.themoviedb.org/3
# TMDB image base + preferred sizes
VITE_TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p
VITE_TMDB_POSTER_SIZE=w500
VITE_TMDB_BACKDROP_SIZE=w780
# Fallback poster path (served from /public)
VITE_POSTER_FALLBACK=/No-Poster.png
# Pagination / fetch behaviour
VITE_RESULTS_PER_PAGE=20
# Logging + feature flags
VITE_LOG_LEVEL=info
VITE_FEATURE_NEW_UI=false
# Optional: cache TTL in seconds for client-side memoization
VITE_CACHE_TTL_SECONDS=300
